@inject IJSRuntime JS               // 자바스크립트 관련
@using static RGWeb.Models.ContentModel

@code {
    [Parameter]
    public Content? pContent { get; set; }

    [Parameter]
    public Action<string?> onUrlClickEvent { get; set; } // 부모 컴포넌트에서 변경 이벤트 캐치

    private async Task onContent_onclick()
    {
        //onUrlClickEvent?.Invoke(pContent.url);
        JS.InvokeVoidAsync("JS_goToIframe", pContent.url);
    }
}

<div class="rounded border p-1" @onclick="onContent_onclick">
    <div class="d-block ListContentTopFontSize">
        @pContent.title
    </div>
    <div class="row m-0 ListContentBottomFontSize">
        <div class="col p-0 px-1">
            @pContent.userName
        </div>
        <div class="col p-0 px-1">
            222
        </div>
        <div class="col p-0 px-1">
            333
        </div>
    </div>
</div>